<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView android:id="@+id/img_movie"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"/>
        <com.mobisys.android.upcoming_movies.assignment.widget.StyleableTextView
            android:id="@+id/txt_movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="5dp"
            app:font="@string/font_lato_regular"
            android:layout_toRightOf="@+id/img_movie"
            android:layout_toLeftOf="@+id/img_arrow"
            android:layout_centerInParent="true"
            android:text="Movie name"/>
        <ImageView android:id="@+id/img_arrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:scaleType="center"
            android:src="@drawable/right_arrow"
            android:layout_marginRight="5dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/layout1">
        <com.mobisys.android.upcoming_movies.assignment.widget.StyleableTextView
            android:id="@+id/txt_realese_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="5dp"
            app:font="@string/font_lato_regular"
            android:text="3/2/14"/>
        <com.mobisys.android.upcoming_movies.assignment.widget.StyleableTextView
            android:id="@+id/txt_adult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="(A/U)"
            app:font="@string/font_lato_regular"
            android:padding="5dp"/>
    </RelativeLayout>
</RelativeLayout>